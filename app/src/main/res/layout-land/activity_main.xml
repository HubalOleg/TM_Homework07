<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="oleg.hubal.com.tm_homework07.MainActivity">

    <RelativeLayout
        android:id="@+id/first_item_field"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/item_background"
        android:clickable="false"
        >

        <FrameLayout
            android:id="@+id/first_item_menu"
            android:padding="@dimen/view_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/first_item_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="@string/item_1"
                android:textSize="@dimen/tittle_text_size"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/first_item_button"
                android:layout_width="@dimen/setting_button_size"
                android:layout_height="@dimen/setting_button_size"
                android:background="@drawable/ic_settings"
                android:layout_gravity="right|center_vertical" />
        </FrameLayout>

        <TextView
            android:id="@+id/first_item_text"
            android:padding="@dimen/view_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_item_menu"
            android:text="@string/first_tv_text"
            android:textColor="@color/state_colors"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second_item_field"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:background="@drawable/item_background">

        <FrameLayout
            android:id="@+id/second_item_menu"
            android:padding="@dimen/view_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/second_item_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="@string/item_2"
                android:textSize="@dimen/tittle_text_size"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/second_item_button"
                android:layout_width="@dimen/setting_button_size"
                android:layout_height="@dimen/setting_button_size"
                android:background="@drawable/ic_settings"
                android:layout_gravity="right|center_vertical" />
        </FrameLayout>

        <TextView
            android:id="@+id/second_item_text"
            android:padding="@dimen/view_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_item_menu"
            android:text="@string/second_tv_text"
            android:textColor="@color/state_colors"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/third_item_field"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:background="@drawable/item_background">

        <FrameLayout
            android:id="@+id/third_item_menu"
            android:padding="@dimen/view_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/third_item_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="@string/item_3"
                android:textSize="@dimen/tittle_text_size"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/third_item_button"
                android:layout_width="@dimen/setting_button_size"
                android:layout_height="@dimen/setting_button_size"
                android:background="@drawable/ic_settings"
                android:layout_gravity="right|center_vertical" />
        </FrameLayout>

        <TextView
            android:id="@+id/third_item_text"
            android:padding="@dimen/view_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/third_item_menu"
            android:text="@string/third_tv_text"
            android:textColor="@color/state_colors"/>
    </RelativeLayout>

</LinearLayout>
